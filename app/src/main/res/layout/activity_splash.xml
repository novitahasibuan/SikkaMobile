<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueDJP"
    android:fitsSystemWindows="true"
    tools:context="id.go.pajak.sikkamobile.activity.SplashActivity">

<ImageView
    android:id="@+id/logo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:elevation="6dp"
    android:src="@drawable/logo" />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:text="Direktorat Jenderal Pajak"
    android:textColor="#fff" />

<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:fontFamily="sans-serif-condensed"
    android:text="SIKKA"
    android:textColor="@color/yellowDJP"
    android:textSize="60dp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@color/yellowDJP"
    android:clipChildren="false"
    android:elevation="8dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/next_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:src="@drawable/right_icon"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/next_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/next_logo"
        android:layout_toStartOf="@+id/next_logo"
        android:fontFamily="sans-serif-condensed"
        android:text="Selanjutnya"
        android:textColor="@android:color/black"
        android:textSize="19dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>
</RelativeLayout>


</RelativeLayout>
